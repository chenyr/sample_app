
<% if signed_in? %>
	<table class="front" summary="For signed-in users">
		<tr>
			<td class="main">
				<h1>What's new? Share it with your friends</h1>
				<%= render 'shared/micropost_form' %>
				<%= render 'shared/feed' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/stats' %>
			</td>
		</tr>
	</table>
<% else %>
	<h1>InfoHub</h1>
	<p>
		See what kind of info is flooding among your friends
	</p>                    
	<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>